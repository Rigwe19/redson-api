{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    "declaration": true,
    "emitDeclarationOnly": false,
    "noEmit": false,
    "composite": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "src/**/*.spec.ts",
    "dist",
    "node_modules",
    "**/helpers/*Fixture.ts",
    "**/__mock__/**",
    "coverage"
  ],
  "linterOptions": {
    "exclude": []
  }
}
